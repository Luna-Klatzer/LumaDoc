      "required": [
        "expires_at",
        "token"
      ],
      "title": "UserToken",
      "type": "object"
    },
    "Ping": {
      "description": "A simple ping response",
      "properties": {
        "date": {
          "description": "The current date in milliseconds",
          "example": 1710613099769,
          "type": "integer"
